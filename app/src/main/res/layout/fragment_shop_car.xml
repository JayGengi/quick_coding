<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/bom_lay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/store_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:drawableTop="@mipmap/ic_store_nor"
                android:drawablePadding="2dp"
                android:text="店铺"
                android:textColor="@color/color_first_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/store_bt"
                android:drawableTop="@mipmap/ic_customerservice_nor"
                android:drawablePadding="2dp"
                android:text="客服"
                android:textColor="@color/color_first_text"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/buy"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_goods_detail_buy_bt" />

            <ImageView
                android:id="@+id/add_shop_car"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_toStartOf="@+id/buy"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_goods_detail_shop_bt" />

        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>