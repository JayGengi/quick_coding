<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.classic.common.MultipleStatusView
            android:id="@+id/multipleStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyView="@layout/layout_empty_view"
            app:errorView="@layout/layout_error_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:loadingView="@layout/layout_loading_view"
            app:noNetworkView="@layout/layout_network_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line" />

                <LinearLayout style="@style/repair_layout">

                    <TextView
                        style="@style/repair_title"
                        android:text="联系人：" />

                    <TextView
                        android:id="@+id/repair_person"
                        style="@style/repair_value_tv"
                        android:text="维修工" />
                </LinearLayout>

                <LinearLayout
                    style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="联系电话：" />

                    <EditText
                        android:id="@+id/repair_phone"
                        style="@style/repair_value"
                        android:hint="输入电话" />
                </LinearLayout>

                <LinearLayout
                    style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="申请人电话：" />

                    <EditText
                        android:id="@+id/apply_repair_phone"
                        style="@style/repair_value"
                        android:hint="输入申请人电话" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/color_white"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/repair_title"
                        android:layout_marginStart="10dp"
                        android:text="验证码：" />
                    <com.guoxun.airbaba.widget.BaseEditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:textColor="@color/color_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/get_code"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/common_textview_border_blue"
                        android:gravity="center"
                        android:paddingStart="17dp"
                        android:paddingEnd="17dp"
                        android:layout_marginEnd="10dp"
                        android:text="获取验证码"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="所在城市：" />

                    <EditText
                        android:id="@+id/repair_place"
                        style="@style/repair_value"
                        android:hint="输入所在城市" />
                </LinearLayout>

                <LinearLayout
                    style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="登录密码：" />

                    <EditText
                        android:id="@+id/pwd"
                        style="@style/repair_value"
                        android:hint="输入登录密码" />
                </LinearLayout>

                <LinearLayout
                    style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="确认密码：" />

                    <EditText
                        android:id="@+id/pwd_again"
                        style="@style/repair_value"
                        android:hint="输入确认密码" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/hide_radius_none"
                        android:checked="true"
                        android:button="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/checkbox_style"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:textColor="@color/color_second_text"
                        android:text="我已阅读并同意"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《入住须知》"
                        android:textColor="@color/color_second_text"
                        android:textSize="12sp" />

                </LinearLayout>
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/upload_business_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="40dp"
                    android:paddingStart="35dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="35dp"
                    android:paddingBottom="10dp"
                    android:text="申请"
                    android:textColor="@color/air_color_blue"
                    android:textSize="15sp"
                    app:qmui_borderColor="@color/color_gray"
                    app:qmui_radius="20dp" />
            </LinearLayout>

        </com.classic.common.MultipleStatusView>
    </ScrollView>


</RelativeLayout>