<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.widget.NestedScrollView
            android:layout_above="@+id/bom_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line" />

                <LinearLayout
                    android:id="@+id/choose_address_lay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableStart="@mipmap/ic_location_nor"
                        android:drawableEnd="@mipmap/ic_common_more"
                        android:drawablePadding="10dp"
                        android:text="填写您的收货地址"
                        android:textColor="@color/color_first_text"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/address_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="收货人:"
                            android:textColor="@color/color_first_text"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/person"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:text="JayGengi"
                            android:textColor="@color/color_first_text"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/per_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10sp"
                            android:text="15315115821"
                            android:textColor="@color/color_first_text"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/common_color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/adress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="收货地址:收货地址:收货地址:收货地址:收货地址:"
                            android:textColor="@color/color_first_text"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_common_more" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="巴巴店铺"
                        android:textColor="@color/color_first_text"
                        android:textSize="15sp" />


                    <RelativeLayout
                        android:id="@+id/goods_info"
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:layout_marginTop="50dp">

                        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                            android:id="@+id/user_img"
                            android:layout_width="99dp"
                            android:layout_height="94dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/img_qrcode_nor"
                            app:qmui_border_color="@color/colorPrimary"
                            app:qmui_border_width="1dp"
                            app:qmui_corner_radius="6dp" />

                        <TextView
                            android:id="@+id/order_name"
                            android:layout_width="143dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/user_img"
                            android:ellipsize="end"
                            android:lineSpacingExtra="6dp"
                            android:maxLines="2"
                            android:text="泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上"
                            android:textColor="@color/color_first_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/order_num_tip"
                            android:layout_width="143dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/order_name"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/user_img"
                            android:text="1双"
                            android:textColor="@color/color_first_text"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/user_img"
                            android:text="￥97.8"
                            android:textColor="@color/mine_red"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/price_old"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@+id/price"
                            android:text="￥48"
                            android:textColor="@color/color_assist_text"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="30dp"
                            android:text="1"
                            android:textColor="@color/color_first_text"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </RelativeLayout>

                <!--商品运费：-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品运费："
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="￥97.8"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <!--优惠券-->
                <RelativeLayout
                    android:id="@+id/coupons_lay"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="优惠券"
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/coupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@mipmap/ic_common_more"
                        android:drawablePadding="10dp"
                        android:text="满100减20"
                        android:textColor="@color/air_color_second_red"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/item_price"
                        android:text="小计："
                        android:textColor="@color/color_second_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="￥97.8"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:id="@+id/leave_message_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="留言"
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />


                    <com.guoxun.airbaba.widget.BaseEditText
                        android:id="@+id/leave_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/leave_message_tip"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="有什么想要对商家说的话吗？"
                        android:padding="4dp"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/common_color_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:padding="14dp"
                    android:text="支付方式：微信支付"
                    android:textColor="@color/color_first_text"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:padding="14dp"
                    android:text="优惠券"
                    android:textColor="@color/color_first_text"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableEnd="@mipmap/btn_selected_nor"
                    android:padding="14dp"
                    android:text="钱包支付：可用789.00"
                    android:textColor="@color/color_first_text"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="21dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品总额："
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="￥97.8"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="优惠券优惠："
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="￥97.8"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="实付金额："
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="￥97.8"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商品运费："
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="￥97.8"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/bom_lay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品总额："
                android:textColor="@color/color_first_text"
                android:textSize="14sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥97.8"
                android:textColor="@color/mine_red"
                android:textSize="14sp"
                android:textStyle="bold" />
            
            <Button
                android:layout_width="95dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="1dp"
                android:layout_height="40dp"
                android:text="支付订单"
                android:textSize="15sp"
                android:textColor="@color/color_white"
                android:background="@drawable/common_textview_border_blue"
                />

        </LinearLayout>
    </RelativeLayout>
</com.classic.common.MultipleStatusView>


