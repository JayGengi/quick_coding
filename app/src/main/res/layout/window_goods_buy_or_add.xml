<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goods_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/goods_top_lay"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="115dp">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥366"
                android:textColor="@color/mine_red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/goods_inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="库存786件"
                android:textColor="@color/color_second_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:text="请选择规格"
                android:textColor="@color/color_first_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@mipmap/btn_close_nor" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goods_top_lay"
        android:background="@color/color_white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="颜色"
                android:textColor="@color/color_second_text"
                android:textSize="14sp" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flow_color_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="型号"
                android:textColor="@color/color_second_text"
                android:textSize="14sp" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flow_model_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/goods_subtract"
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:background="@drawable/common_textview_border_line"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_goods_subtract" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/common_textview_border_line"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/goods_add"
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:background="@drawable/common_textview_border_line"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_goods_add" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@+id/goods_info"
        android:background="@color/air_color_blue"
        android:text="确定"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/goods_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bangbangtang"
        app:qmui_border_color="@color/colorPrimary"
        app:qmui_border_width="1dp"
        app:qmui_corner_radius="2dp" />

</RelativeLayout>
