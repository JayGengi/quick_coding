<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goods_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginStart="115dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥366"
                android:textSize="18sp"
                android:textColor="@color/mine_red"
                />

            <TextView
                android:id="@+id/goods_inventory"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存786件"
                android:textSize="12sp"
                android:textColor="@color/color_second_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="true"
                android:text="请选择规格"
                android:textSize="14sp"
                android:textColor="@color/color_first_text"
                />
            <ImageView
                android:id="@+id/cancel"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@mipmap/btn_close_nor"
                />
        </RelativeLayout>


    </LinearLayout>
    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/goods_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        app:qmui_border_color="@color/colorPrimary"
        android:src="@mipmap/bangbangtang"
        android:layout_marginTop="-15dp"
        app:qmui_border_width="1dp"
        app:qmui_corner_radius="2dp" />

</RelativeLayout>
