<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="巴巴店铺"
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text="待付款"
                android:textColor="#F72039"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/goods_info"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="50dp">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/user_img"
                    android:layout_width="99dp"
                    android:layout_height="94dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_qrcode_nor"
                    app:qmui_border_color="@color/colorPrimary"
                    app:qmui_border_width="1dp"
                    app:qmui_corner_radius="6dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/user_img"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:maxLines="2"
                    android:text="泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:gravity="end"
                    android:text="X1"
                    android:textColor="@color/color_first_text"
                    android:textSize="10sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_lay"
                android:layout_below="@+id/goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                >
                <TextView
                    android:id="@+id/goods_all_num"
                    android:layout_toStartOf="@+id/price_all_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="共2件商品"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/price_all_tip"
                    android:layout_toStartOf="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计："
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="￥97.8"
                    android:textColor="@color/mine_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/edit_lay"
                android:layout_below="@+id/price_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal"
                android:gravity="end"
                >
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn3"
                    android:layout_marginEnd="15dp"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:text="查看物流"
                    android:layout_gravity="center"
                    android:textColor="@color/air_color_blue"
                    android:textSize="14sp"
                    app:qmui_borderColor="@color/air_color_blue"
                    app:qmui_radius="20dp" />
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn2"
                    android:layout_marginEnd="15dp"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:text="去付款"
                    android:layout_gravity="center"
                    android:textColor="@color/air_color_blue"
                    android:textSize="14sp"
                    app:qmui_borderColor="@color/air_color_blue"
                    app:qmui_radius="20dp" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/btn1"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:text="取消订单"
                    android:layout_gravity="center"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp"
                    app:qmui_borderColor="@color/color_first_text"
                    app:qmui_radius="20dp" />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_color_line" />
    </LinearLayout>


</RelativeLayout>


