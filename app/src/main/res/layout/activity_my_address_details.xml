<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.classic.common.MultipleStatusView
        android:id="@+id/multipleStatusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:emptyView="@layout/layout_empty_view"
        app:errorView="@layout/layout_error_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:loadingView="@layout/layout_loading_view"
        app:noNetworkView="@layout/layout_network_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <LinearLayout style="@style/repair_layout">

                <TextView
                    style="@style/repair_title"
                    android:text="收货人" />

                <EditText
                    android:id="@+id/address_person"
                    style="@style/repair_value"
                    android:hint="请填写收货人姓名" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                style="@style/repair_layout"
                android:layout_marginTop="1dp">

                <TextView
                    style="@style/repair_title"
                    android:text="联系电话" />

                <EditText
                    android:id="@+id/address_phone"
                    style="@style/repair_value"
                    android:hint="请填写联系电话" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                style="@style/repair_layout"
                android:layout_marginTop="1dp">

                <TextView
                    style="@style/repair_title"
                    android:text="所在地区" />

                <EditText
                    android:id="@+id/address_place"
                    style="@style/repair_value"
                    android:hint="所在地区" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                style="@style/repair_layout"
                android:layout_marginTop="1dp">

                <TextView
                    style="@style/repair_title"
                    android:text="详情地址" />

                <EditText
                    android:id="@+id/address_des"
                    style="@style/repair_value"
                    android:hint="街道，楼牌号等" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                style="@style/repair_layout"
                android:layout_marginTop="1dp">

                <TextView
                    style="@style/repair_title"
                    android:text="标签" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                style="@style/repair_layout"
                android:layout_marginTop="1dp">

                <TextView
                    style="@style/repair_title"
                    android:layout_weight="1"
                    android:text="设置默认地址" />

                <ImageView
                    android:id="@+id/iv_default_switch"
                    android:layout_width="53dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/btn_unselected_nor"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />


        </LinearLayout>

    </com.classic.common.MultipleStatusView>

    <TextView
        android:id="@+id/save_to_use"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:background="@drawable/common_textview_border_blue_20"
        android:gravity="center"
        android:text="保存并使用"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

</RelativeLayout>