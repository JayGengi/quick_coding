<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_color_line" />

    <RelativeLayout
        android:id="@+id/merchant_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="12dp">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/brand_head_img"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:qmui_border_color="@color/colorPrimary"
            android:src="@mipmap/bangbangtang"
            app:qmui_border_width="1dp"
            app:qmui_corner_radius="2dp" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/brand_head_img"
            android:text="玉珠"
            android:textColor="@color/color_first_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/brand_goods_num"
            android:layout_below="@+id/brand_name"
            android:layout_toEndOf="@+id/brand_head_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="在售商品41件"
            android:textColor="@color/color_second_text"
            android:textSize="14sp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/share_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="分享品牌"
            android:layout_gravity="center"
            android:textColor="@color/color_first_text"
            android:textSize="14sp"
            app:qmui_borderColor="@color/color_first_text"
            app:qmui_radius="2dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="10dp"
        android:background="@color/common_color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/zonghe"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/air_color_blue"
            android:textSize="14sp"
            android:text="新品"
            />
        <TextView
            android:id="@+id/xiaoliang"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/color_second_text"
            android:textSize="14sp"
            android:text="销量"
            />
        <TextView
            android:id="@+id/jiage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/color_second_text"
            android:textSize="14sp"
            android:text="价格"
            />
        <TextView
            android:id="@+id/shaixuan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/color_second_text"
            android:textSize="14sp"
            android:text="筛选"
            />

    </LinearLayout>
    <com.classic.common.MultipleStatusView
        android:id="@+id/multipleStatusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/layout_empty_view"
        app:errorView="@layout/layout_error_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:loadingView="@layout/layout_loading_view"
        app:noNetworkView="@layout/layout_network_view">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:background="@color/common_color_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </com.classic.common.MultipleStatusView>

</LinearLayout>
