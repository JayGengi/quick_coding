<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/in_come_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="2019-12-11 10:12:20"
            android:textColor="@color/color_first_text"
            android:textSize="15sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            >

            <TextView
                android:id="@+id/merchant_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="商家名称："
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/merchant_name"
                android:layout_toEndOf="@+id/merchant_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="鑫鑫店铺"
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/goods_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="商品名称："
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/goods_name"
                android:layout_toEndOf="@+id/goods_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="牛奶"
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/goods_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="商品金额："
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/goods_price"
                android:layout_toEndOf="@+id/goods_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:text="100元"
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_below="@+id/in_come_lay"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_color_line"
        />
</RelativeLayout>
