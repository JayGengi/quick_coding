<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color_line"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:alpha="1"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:text="类目"
            android:textColor="@color/color_first_text"
            android:textSize="16sp" />

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/type"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:background="@color/color_white"-->
            <!--android:scrollbars="none" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:text="价格区间（元）"
            android:textColor="@color/color_first_text"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.guoxun.airbaba.widget.BaseEditText
                android:id="@+id/min_price"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_marginStart="12dp"
                android:inputType="numberDecimal"
                android:background="@drawable/common_textview_border_line"
                android:gravity="center"
                android:hint="最低价格"
                android:textColor="@color/color_first_text"
                android:textSize="12sp" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@color/common_color_line" />

            <com.guoxun.airbaba.widget.BaseEditText
                android:id="@+id/max_price"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_marginStart="5dp"
                android:inputType="numberDecimal"
                android:background="@drawable/common_textview_border_line"
                android:gravity="center"
                android:hint="最高价格"
                android:textColor="@color/color_first_text"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:text="商品一级分类"
            android:textColor="@color/color_first_text"
            android:textSize="16sp" />

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/type_one"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:background="@color/color_white"-->
            <!--android:scrollbars="none" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:text="商品属性"
            android:textColor="@color/color_first_text"
            android:textSize="16sp" />

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/attribute"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:background="@color/color_white"-->
            <!--android:scrollbars="none" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="bottom"
            android:gravity="bottom">
            <TextView
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/color_first_text"
                android:background="@drawable/common_textview_border_line"
                android:text="重置"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/color_white"
                android:background="@color/air_color_blue"
                android:text="确定"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
