<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:scrollbars="none">
        <com.classic.common.MultipleStatusView
            android:id="@+id/multipleStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyView="@layout/layout_empty_view"
            app:errorView="@layout/layout_error_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:loadingView="@layout/layout_loading_view"
            app:noNetworkView="@layout/layout_network_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout style="@style/repair_layout">

                    <TextView
                        style="@style/repair_title"
                        android:text="联系人：" />

                    <EditText
                        android:id="@+id/repair_person"
                        style="@style/repair_value"
                        android:hint="输入联系人" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="联系电话：" />

                    <EditText
                        android:id="@+id/repair_phone"
                        style="@style/repair_value"
                        android:layout_weight="1"
                        android:hint="输入手机号" />

                    <Button
                        android:id="@+id/call_phone"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/common_textview_border_blue"
                        android:gravity="center"
                        android:text="一键拨打电话"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />

                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="所在地址：" />

                    <EditText
                        android:id="@+id/repair_address"
                        style="@style/repair_value"
                        android:hint="输入所在地址" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="报修电器：" />

                    <EditText
                        android:id="@+id/repair_electric"
                        style="@style/repair_value"
                        android:hint="输入报修电器" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="简单描述：" />

                    <EditText
                        android:id="@+id/repair_content"
                        style="@style/repair_value"
                        android:hint="输入您的内容" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="上传照片：" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <com.guoxun.airbaba.widget.WarpLinearLayout
                        android:id="@+id/img_flexbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:grivate="left" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="订单金额：" />

                    <EditText
                        android:id="@+id/repair_place"
                        style="@style/repair_value"
                        android:hint="请输入金额" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/btn1"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:text="报价"
                        android:layout_gravity="center"
                        android:textColor="@color/air_color_blue"
                        android:textSize="15sp"
                        app:qmui_borderColor="@color/color_gray"
                        app:qmui_radius="20dp" />

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:id="@+id/btn2"
                        android:layout_width="95dp"
                        android:layout_marginStart="87dp"
                        android:layout_height="match_parent"
                        android:text="无法维修"
                        android:layout_gravity="center"
                        android:textColor="@color/air_color_blue"
                        android:textSize="15sp"
                        app:qmui_borderColor="@color/color_gray"
                        app:qmui_radius="20dp" />
                </LinearLayout>
            </LinearLayout>

        </com.classic.common.MultipleStatusView>
    </ScrollView>


</RelativeLayout>