<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/tools"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="巴巴店铺"
                    android:textColor="@color/color_first_text"
                    android:textSize="15sp" />


                <RelativeLayout
                    android:id="@+id/goods_info"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_marginTop="50dp">

                    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        android:id="@+id/user_img"
                        android:layout_width="99dp"
                        android:layout_height="94dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/img_qrcode_nor"
                        app:qmui_border_color="@color/colorPrimary"
                        app:qmui_border_width="1dp"
                        app:qmui_corner_radius="6dp" />

                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="143dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/user_img"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6dp"
                        android:maxLines="2"
                        android:text="泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上"
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />

                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/common_textview_border_pink"
                android:gravity="center"
                android:text="商品评价"
                android:textColor="@color/air_color_red"
                android:textSize="15sp" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="描述相符"
                    android:textColor="@color/color_first_text"
                    android:textSize="15sp" />

                <com.guoxun.airbaba.widget.StarBar
                    android:id="@+id/star_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:stepSize="1"
                    ratingbar:starCount="5"
                    ratingbar:starDistance="26"
                    ratingbar:starSize="20dp" />

            </LinearLayout>

            <com.guoxun.airbaba.widget.BaseEditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="12dp"
                android:background="@null"
                android:gravity="start"
                android:hint="宝贝满足你的期待吗？说些你的使用心得吧"
                android:padding="4dp"
                android:textColor="@color/color_first_text"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <com.guoxun.airbaba.widget.WarpLinearLayout
                    android:id="@+id/img_flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:grivate="left" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/common_color_line" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:text="确认"
        android:textSize="15sp"
        android:textColor="@color/color_white"
        android:background="@color/air_color_blue"
        />
</com.classic.common.MultipleStatusView>


