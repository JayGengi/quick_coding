<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="380dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@color/mine_red">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13dp"
                    android:text="限时抢购"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="13dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距开始仅剩 11时25分12秒"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距结束仅剩 11时25分12秒"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/now_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥48.9"
                    android:textColor="@color/air_color_red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="￥48.9"
                    android:textColor="@color/color_second_text"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="念食安含特价初榨混..."
                        android:textColor="@color/color_first_text"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="西班牙进口"
                        android:textColor="@color/color_second_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="13dp"
                    android:drawableTop="@mipmap/ic_collection_goods_nor"
                    android:drawablePadding="10dp"
                    android:text="收藏"
                    android:textColor="@color/color_first_text"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buy_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6.1万人已买"
                    android:textColor="@color/color_second_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="库存剩451231件"
                    android:textColor="@color/color_second_text"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="24dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                android:id="@+id/goods_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="促销"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/promotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="满30减10 满50减20"
                    android:textColor="@color/mine_red"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ic_common_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="服务"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="空气巴巴，48小时发货，7天无理由，包邮"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ic_common_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="规格"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/specification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="一箱"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ic_common_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:background="@color/common_color_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买家评价（46545）"
                    android:textColor="@color/color_first_text"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="好评率"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/good_reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="98%"
                    android:textColor="@color/mine_red"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:src="@mipmap/ic_common_more" />
            </LinearLayout>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/comment_head_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/bangbangtang" />

                <TextView
                    android:id="@+id/comment_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/comment_head_img"
                    android:text="180****1451"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/comment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="5dp"
                    android:text="1赞·4分享"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/comment_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comment_phone"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/comment_head_img"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:maxLines="2"
                    android:text="已经用过了，感觉很好，巴巴购物，就是放心，价格合理，质量保障，，就是放心，鱼米.."
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="12dp"
                android:background="@color/common_color_line" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/look_comment"
                android:layout_width="98dp"
                android:layout_height="28dp"
                android:layout_marginBottom="15dp"
                android:text="查看全部评价"
                android:layout_gravity="center"
                android:textColor="@color/color_first_text"
                android:textSize="12sp"
                app:qmui_borderColor="@color/common_color_line"
                app:qmui_radius="2dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="22dp"
                android:background="@color/common_color_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="12dp">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/brand_head_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    app:qmui_border_color="@color/colorPrimary"
                    android:src="@mipmap/bangbangtang"
                    app:qmui_border_width="1dp"
                    app:qmui_corner_radius="2dp" />

                <TextView
                    android:id="@+id/brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/brand_head_img"
                    android:text="玉珠"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/brand_goods_num"
                    android:layout_below="@+id/brand_name"
                    android:layout_toEndOf="@+id/brand_head_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:text="在售商品41件"
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/brand_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="自营品牌"
                    android:textColor="@color/mine_red"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:drawablePadding="50dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/common_color_line" />

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_store_nor"/>-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_margin="12dp"
                android:scrollbars="none" />



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>