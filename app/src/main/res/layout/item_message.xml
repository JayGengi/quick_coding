<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/common_textview_border_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="您的订单已分派"
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2月21日 16：45"
                android:textColor="@color/color_second_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/order_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_error" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/order_img"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:lines="2"
                android:text="IAM 空气净化器 除甲醛异味雾霾家用办公室除甲醛异味雾霾家用办公室"
                android:textColor="@color/color_first_text"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/order_img"
                android:layout_marginStart="8dp"
                android:text="运单编号：123456789"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_second_text"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
