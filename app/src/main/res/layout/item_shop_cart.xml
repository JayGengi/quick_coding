<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <LinearLayout
        android:id="@+id/bus_lay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:checked="true"
            android:drawableStart="@drawable/checkbox_style"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="2dp"
            android:paddingBottom="12dp"
            android:textColor="@color/color_second_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:text="商家名称"
            android:textColor="@color/color_first_text"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/info_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_lay"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:button="@null"
            android:checked="true"
            android:drawableStart="@drawable/checkbox_style"
            android:paddingStart="12dp"
            android:paddingEnd="2dp"
            android:textColor="@color/color_second_text"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="20dp">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/user_img"
                    android:layout_width="99dp"
                    android:layout_height="94dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_qrcode_nor"
                    app:qmui_border_color="@color/colorPrimary"
                    app:qmui_border_width="1dp"
                    app:qmui_corner_radius="6dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/user_img"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:maxLines="2"
                    android:text="泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/user_img"
                    android:text="￥97.8"
                    android:textColor="@color/mine_red"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/price"
                    android:text="￥111"
                    android:textColor="@color/color_assist_text"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/goods_subtract"
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:background="@drawable/common_textview_border_line"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_goods_subtract" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/common_textview_border_line"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/goods_add"
                        android:layout_width="33dp"
                        android:layout_height="31dp"
                        android:background="@drawable/common_textview_border_line"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_goods_add" />
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp"
                android:text="距离活动结束还有：02:12:05"
                android:textColor="@color/air_color_second_red"
                android:textSize="12sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:text="￥97.8"
                    android:textColor="@color/mine_red"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/all_price"
                    android:text="小计："
                    android:textColor="@color/color_second_text"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/info_lay"
        android:background="@color/common_color_line" />
</RelativeLayout>


