<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_color_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/comment_head_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/bangbangtang" />

        <TextView
            android:id="@+id/comment_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/comment_head_img"
            android:text="180****1451"
            android:textColor="@color/color_second_text"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/comment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_phone"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/comment_head_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="成人奶粉 全家营养甜奶粉 维生素D 牛奶粉..."
            android:textColor="@color/color_first_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/comment_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_info"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/comment_head_img"
            android:ellipsize="end"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:text="已经用过了，感觉很好，巴巴购物，就是放心，价格合理，质量保障，，就是放心，鱼米.."
            android:textColor="@color/color_second_text"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <com.guoxun.airbaba.widget.NineGridView
            android:id="@+id/nine_grid"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:spacing="2dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@color/common_color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/praise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableStart="@mipmap/ic_givealike_nor"
            android:drawablePadding="4dp"
            android:text="赞6"
            android:textColor="@color/color_second_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableStart="@mipmap/ic_comments_c_nor"
            android:drawablePadding="4dp"
            android:text="评论"
            android:textColor="@color/color_second_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableStart="@mipmap/ic_share_comment_nor"
            android:drawablePadding="4dp"
            android:text="分享6"
            android:textColor="@color/color_second_text"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
