<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:text="巴巴店铺"
                    android:textColor="@color/color_first_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:text="已处理"
                    android:textColor="#F72039"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/goods_info"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="50dp">

                    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        android:id="@+id/user_img"
                        android:layout_width="99dp"
                        android:layout_height="94dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/img_qrcode_nor"
                        app:qmui_border_color="@color/colorPrimary"
                        app:qmui_border_width="1dp"
                        app:qmui_corner_radius="6dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="143dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/user_img"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6dp"
                        android:maxLines="2"
                        android:text="泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上泰国新鲜山竹4A新鲜上"
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:gravity="end"
                        android:text="X1"
                        android:textColor="@color/color_first_text"
                        android:textSize="10sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/price_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_info"
                    android:layout_margin="12dp">

                    <TextView
                        android:id="@+id/goods_all_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@+id/price_all_tip"
                        android:text="共2件商品"
                        android:textColor="@color/color_second_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price_all_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/price"
                        android:text="合计："
                        android:textColor="@color/color_first_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="￥97.8"
                        android:textColor="@color/mine_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="5dp"
                android:background="@color/common_color_line" />
            <!--申请方式：-->
            <RelativeLayout
                android:id="@+id/apply_pay_lay"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="申请方式："
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/apply_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_assist_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:hint="请选择"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:drawablePadding="10dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/common_textview_border_line"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                >
                <TextView
                    android:id="@+id/reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_assist_text"
                    android:text="货物损坏"
                    android:padding="14dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传照片："
                android:textColor="@color/color_first_text"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <com.guoxun.airbaba.widget.WarpLinearLayout
                    android:id="@+id/img_flexbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:grivate="left" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line"
                />
            <LinearLayout style="@style/repair_layout">

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="120dp"
                    style="@style/repair_title"
                    android:text="快递公司名称：" />

                <EditText
                    android:id="@+id/courier_name"
                    style="@style/repair_value"
                    android:hint="输入快递公司名称" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line"
                />
            <LinearLayout style="@style/repair_layout">

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="120dp"
                    style="@style/repair_title"
                    android:text="快递订单号：" />

                <EditText
                    android:id="@+id/courier_num"
                    style="@style/repair_value"
                    android:hint="输入您快递订单号" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line"
                />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/common_textview_border_blue_20"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.classic.common.MultipleStatusView>


