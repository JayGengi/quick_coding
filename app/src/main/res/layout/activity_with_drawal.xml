<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--当前钱包余额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="当前钱包余额："
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48.9"
                    android:textColor="@color/mine_red"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="18sp" />

            </RelativeLayout>

            <!--姓名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名："
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />




                <EditText
                    android:id="@+id/real_name"
                    android:layout_width="250dp"
                    android:gravity="end|center"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@color/color_second_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />

            </RelativeLayout>

            <!--手机号-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号："
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/phone"
                    android:layout_width="250dp"
                    android:gravity="end|center"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@color/color_second_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />


            </RelativeLayout>

            <!--申请提现金额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="申请提现金额："
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/apply_price"
                    android:layout_width="250dp"
                    android:gravity="end|center"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@color/color_second_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />


            </RelativeLayout>

            <!--提现银行卡号-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="提现银行卡号："
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/bank_num"
                    android:layout_width="250dp"
                    android:gravity="end|center"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@color/color_second_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/apply_for"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="76dp"
                android:background="@drawable/common_textview_border_blue_20"
                android:gravity="center"
                android:text="申请"
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</com.classic.common.MultipleStatusView>


