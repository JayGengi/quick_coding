<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="@drawable/bg_sign_in_top">

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerInParent="true"
                android:background="@drawable/common_btn_border_round_blue"
               >

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_sign_in_can"
                    android:gravity="center"
                    android:text="签到"
                    android:textColor="@color/color_white"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/common_textview_border_simple_blue_20"
                    android:gravity="center"
                    android:text="本月已签到1天"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerInParent="true"
                android:background="@drawable/common_btn_border_round_blue">

                <RelativeLayout
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/common_btn_border_round_white">

                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/common_textview_border_line_20"
                        android:gravity="center"
                        android:text="已签到"
                        android:textColor="@color/color_white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/common_textview_border_simple_blue_20"
                        android:gravity="center"
                        android:text="本月已签到1天"
                        android:textColor="@color/color_white"
                        android:textSize="12sp" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="12dp"
                android:text="75积分"
                android:textColor="@color/color_white"
                android:textSize="12sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/common_btn_border_line"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/calendar_previous"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:rotation="180"
                    android:src="@mipmap/ic_common_more" />


                <TextView
                    android:id="@+id/tv_calendar_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="2019年02月"
                    android:textColor="@color/color_first_text"
                    android:textSize="18sp" />

                <!--<TextView-->
                <!--android:id="@+id/tv_calendar_today2"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:padding="5dp"-->
                <!--android:text="今天"-->
                <!--android:textColor="#333333"-->
                <!--android:textSize="14sp" />-->

                <ImageView
                    android:id="@+id/calendar_next"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_common_more" />
            </LinearLayout>

            <com.guoxun.airbaba.widget.calendar.SignCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:calendarTextSize="14sp"
                app:errorColor="@color/common_color_line"
                app:errorTextColor="#222222"
                app:isShowLunar="true"
                app:isShowOtherMonth="true"
                app:limitFutureMonth="false"
                app:lunarTextSize="9sp"
                app:signColor="#5675F2"
                app:signSize="35sp"
                app:signTextColor="#FFFFFF"
                app:todayTextColor="@android:color/holo_red_light"
                app:weekBackgroundColor="#F5F5F5"
                app:weekTextColor="#222222"
                app:weekTextSize="14sp">

            </com.guoxun.airbaba.widget.calendar.SignCalendarView>
        </LinearLayout>

    </LinearLayout>
</com.classic.common.MultipleStatusView>


