<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="2019/02/12   星期四"
        android:textColor="@color/color_second_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_below="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/common_textview_border_white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/order_img"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="140dp"
                android:src="@drawable/bg_nor"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/order_img"
                android:ellipsize="end"
                android:layout_marginStart="12dp"
                android:lines="1"
                android:text="新版APP上线通知"
                android:textColor="@color/color_first_text"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="简单4步快速熟悉新版APP功能，每日优选商品海量来袭，抢到就是赚到..."
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:layout_marginStart="12dp"
                android:lines="2"
                android:layout_marginTop="14dp"
                android:textColor="@color/color_second_text"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/act_end"
        android:layout_width="83dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_activitys_end"
        />
</RelativeLayout>
