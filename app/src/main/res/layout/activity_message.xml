<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    >
        <com.classic.common.MultipleStatusView
            android:id="@+id/multipleStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyView="@layout/layout_empty_view"
            app:errorView="@layout/layout_error_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:loadingView="@layout/layout_loading_view"
            app:noNetworkView="@layout/layout_network_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <!--我的收藏-->
                        <LinearLayout
                            android:id="@+id/mine_collection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="19dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:drawableTop="@mipmap/ic_ordermessage_nor"
                                android:drawablePadding="11dp"
                                android:text="订单消息"
                                android:textColor="@color/color_first_text"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!--地址管理-->
                        <LinearLayout
                            android:id="@+id/mine_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="19dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:drawableTop="@mipmap/ic_hotnews_nor"
                                android:drawablePadding="11dp"
                                android:text="报修消息"
                                android:textColor="@color/color_first_text"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <!--我的团队-->
                        <LinearLayout
                            android:id="@+id/mine_team"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="19dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:drawableTop="@mipmap/ic_assets_nor"
                                android:drawablePadding="11dp"
                                android:text="我的资产"
                                android:textColor="@color/color_first_text"
                                android:textSize="15sp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="19dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_activity_nor"/>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp">
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="精选活动"
                            android:lineSpacingExtra="5dp"
                            android:textColor="@color/color_first_text"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:id="@+id/time"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="今天  10:12:23"
                            android:textColor="@color/color_second_text"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/shop_num"
                            android:layout_alignParentBottom="true"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_centerVertical="true"
                            android:text="优惠券、积分记录消息（账户变动..."
                            android:textColor="@color/color_second_text"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="19dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_announcement_nor"/>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp">
                        <TextView
                            android:id="@+id/title_t"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="系统公告"
                            android:lineSpacingExtra="5dp"
                            android:textColor="@color/color_first_text"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:id="@+id/time_t"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="今天  10:12:23"
                            android:textColor="@color/color_second_text"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/shop_num_t"
                            android:layout_alignParentBottom="true"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_centerVertical="true"
                            android:text="交易物流 [【开年大减价】...] 已发货!正..."
                            android:textColor="@color/color_second_text"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </com.classic.common.MultipleStatusView>
</RelativeLayout>