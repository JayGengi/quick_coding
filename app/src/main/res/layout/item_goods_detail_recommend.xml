<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/common_textview_border_white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_shopping_nor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员价"
                android:textColor="@color/air_color_red"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/common_textview_border_pink"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="￥166"
                android:layout_marginStart="14dp"
                android:textColor="@color/air_color_red"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingStart="6dp"
                android:text="20000人已买"
                android:textColor="@color/color_second_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="￥400"
                android:layout_marginStart="20dp"
                android:textColor="@color/color_second_text"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="美的（MideM1-L201B升级款 变频微波炉 "
            android:textColor="@color/color_first_text"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/type_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冰箱"
                android:textColor="@color/color_second_text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/common_textview_border_line"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/type_t"
                android:layout_toEndOf="@+id/type_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微波炉"
                android:textColor="@color/color_second_text"
                android:layout_marginStart="15dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/common_textview_border_line"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
