<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color_line"
    android:orientation="vertical"
    >
    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        app:qmui_topbar_title_color="@color/color_first_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:scrollbars="none">
        <com.classic.common.MultipleStatusView
            android:id="@+id/multipleStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:emptyView="@layout/layout_empty_view"
            app:errorView="@layout/layout_error_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:loadingView="@layout/layout_loading_view"
            app:noNetworkView="@layout/layout_network_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_color_line"
                    />
                <LinearLayout style="@style/repair_layout">

                    <TextView
                        style="@style/repair_title"
                        android:text="联系人：" />

                    <EditText
                        android:id="@+id/repair_person"
                        style="@style/repair_value"
                        android:hint="输入联系人" />
                </LinearLayout>

                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="联系电话：" />

                    <EditText
                        android:id="@+id/repair_phone"
                        style="@style/repair_value"
                        android:hint="输入手机号" />
                </LinearLayout>

                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="所在地区：" />

                    <EditText
                        android:id="@+id/repair_place"
                        style="@style/repair_value"
                        android:hint="输入所在地区" />
                </LinearLayout>

                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="所在地址：" />

                    <EditText
                        android:id="@+id/repair_address"
                        style="@style/repair_value"
                        android:hint="输入所在地址" />
                </LinearLayout>

                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="报修电器：" />

                    <EditText
                        android:id="@+id/repair_electric"
                        style="@style/repair_value"
                        android:hint="输入报修电器" />
                </LinearLayout>

                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="简单描述：" />

                    <EditText
                        android:id="@+id/repair_content"
                        style="@style/repair_value"
                        android:hint="输入您的内容" />
                </LinearLayout>

                <LinearLayout style="@style/repair_layout"
                    android:layout_marginTop="1dp">

                    <TextView
                        style="@style/repair_title"
                        android:text="上传照片：" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <com.guoxun.airbaba.widget.WarpLinearLayout
                        android:id="@+id/img_flexbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:grivate="left" />
                </LinearLayout>

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/upload_business_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="35dp"
                    android:paddingEnd="35dp"
                    android:text="报修"
                    android:layout_gravity="center"
                    android:textColor="@color/air_color_blue"
                    android:textSize="15sp"
                    app:qmui_borderColor="@color/color_gray"
                    app:qmui_radius="20dp" />
            </LinearLayout>

        </com.classic.common.MultipleStatusView>
    </ScrollView>


</RelativeLayout>