<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--修改登录手机号-->
            <RelativeLayout
                android:id="@+id/phone_lay"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="修改登录手机号"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13815702154"
                    android:textColor="@color/color_first_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:drawablePadding="10dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <!--实名认证-->
            <RelativeLayout
                android:id="@+id/real_name_lay"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:id="@+id/real_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="实名认证"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/real_name_red_p"
                    android:layout_toEndOf="@+id/real_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="*"
                    android:textColor="@color/mine_red"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/real_name"
                    android:layout_toEndOf="@+id/real_name_red_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="张三"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/real_name_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已实名"
                    android:textColor="@color/color_first_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:drawablePadding="10dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <!--绑定银行卡-->
            <RelativeLayout
                android:id="@+id/push_lay"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="绑定银行卡"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/bank_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6217 0000 1234 568"
                    android:textColor="@color/color_first_text"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:drawablePadding="10dp"
                    android:textSize="14sp" />


            </RelativeLayout>

            <!--用户协议-->
            <RelativeLayout
                android:id="@+id/user_agreement_lay"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="用户协议"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:drawablePadding="10dp"
                    android:textSize="14sp" />


            </RelativeLayout>

            <!--用户隐私政策-->
            <RelativeLayout
                android:id="@+id/privacy_policy_lay"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="用户隐私政策"
                    android:textColor="@color/color_first_text"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@mipmap/ic_common_more"
                    android:drawablePadding="10dp"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.classic.common.MultipleStatusView>


