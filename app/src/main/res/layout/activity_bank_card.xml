<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_color_line" />

            <LinearLayout style="@style/repair_layout">

                <TextView
                    style="@style/repair_title"
                    android:text="填写真实姓名" />

                <EditText
                    android:id="@+id/real_name"
                    style="@style/repair_value"
                    android:hint="输入真实姓名" />
            </LinearLayout>

            <LinearLayout
                style="@style/repair_layout"
                android:layout_marginTop="1dp">

                <TextView
                    style="@style/repair_title"
                    android:text="填写身份证号" />

                <EditText
                    android:id="@+id/repair_phone"
                    style="@style/repair_value"
                    android:hint="输入身份证号" />
            </LinearLayout>

            <LinearLayout
                style="@style/repair_layout"
                android:layout_marginTop="1dp">

                <TextView
                    style="@style/repair_title"
                    android:text="填写银行卡号" />

                <EditText
                    android:id="@+id/bank_card_num"
                    style="@style/repair_value"
                    android:hint="输入银行卡号" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="50dp"
            android:background="@drawable/common_textview_border_blue_20"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </RelativeLayout>
</com.classic.common.MultipleStatusView>


