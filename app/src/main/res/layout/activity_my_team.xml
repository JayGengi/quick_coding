<?xml version="1.0" encoding="utf-8"?>

<com.classic.common.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multipleStatusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:emptyView="@layout/layout_empty_view"
    app:errorView="@layout/layout_error_view"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:loadingView="@layout/layout_loading_view"
    app:noNetworkView="@layout/layout_network_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/user_img"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginStart="25dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:qmui_border_color="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:src="@mipmap/headportrait"
            app:qmui_border_width="1dp"
            app:qmui_is_circle="true" />

        <TextView
            android:id="@+id/name"
            android:layout_toEndOf="@+id/user_img"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名称：纳纳"
            android:textColor="@color/color_first_text"
            android:textSize="15sp"
            />
            <TextView
                android:id="@+id/phone"
                android:layout_toEndOf="@+id/user_img"
                android:layout_marginStart="30dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码：17548454578"
                android:textColor="@color/color_first_text"
                android:textSize="15sp"
                />

        <TextView
            android:id="@+id/time"
            android:layout_toEndOf="@+id/user_img"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请时间：2019/12/12  "
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_first_text"
            android:textSize="15sp"
            />

    </RelativeLayout>
</com.classic.common.MultipleStatusView>


