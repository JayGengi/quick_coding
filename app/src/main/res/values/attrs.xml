<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义折叠 TextView  -->
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
    </declare-styleable>


    <attr name="type">
        <enum name="none" value="0" />
        <enum name="circle" value="1" />
        <enum name="rounded_rect" value="2" />
    </attr>
    <attr name="borderColor" format="color" />
    <attr name="borderWidth" format="dimension" />
    <attr name="rectRoundRadius" format="dimension" />

    <declare-styleable name="CircleImageView">
        <attr name="type" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="rectRoundRadius" />
    </declare-styleable>

    <!-- loadingView-->
    <declare-styleable name="LoadingView">
        <!--  设置外面进度条的半径 -->
        <attr name="outerCircleRadius" format="dimension|reference" />
        <!--  设置外面进度条的颜色 -->
        <attr name="outerCircleColor" format="color|reference" />
        <!--  设置三角形外接圆的半径 -->
        <attr name="innerTriangleRadius" format="dimension|reference" />
        <!--  设置三角形颜色 -->
        <attr name="innerTriangleColor" format="color|reference" />
        <!--  设置背景的颜色 -->
        <attr name="backgroundColor" format="color|reference" />
        <!--  设置是否需要背景 -->
        <attr name="isNeedBackground" format="boolean" />
        <attr name="strokeWidth" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="WarpLinearLayout">
        <attr name="grivate" format="enum"><!--对齐方式 !-->
            <enum name="right" value="0" />
            <enum name="left" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="horizontal_Space" format="dimension" />
        <attr name="vertical_Space" format="dimension" />
        <attr name="isFull" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SlideDetailsLayout">
        <!-- float value for indicate the moment of switch panel-->
        <attr name="percent" format="float"/>
        <!-- how long the animation keep-->
        <attr name="duration" format="integer"/>
        <!-- default panel to show after init-->
        <attr name="default_panel" format="enum">
            <enum name="front" value="0"/>
            <enum name="behind" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="NineGridLayout">
        <attr name="spacing" format="dimension" />
    </declare-styleable>

</resources>